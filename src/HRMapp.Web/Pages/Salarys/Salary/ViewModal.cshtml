@page
@using HRMapp.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@inject IHtmlLocalizer<HRMappResource> L
@model HRMapp.Web.Pages.Salarys.Salary.ViewModalModel
@{
    Layout = null;
}

@section scripts
{
    <abp-script src="/Pages/Salarys/Salary/index.js"/>
}
<abp-modal size="Large">
    <abp-modal-header title="@L["Salary"].Value"></abp-modal-header>
    <abp-modal-body>
         <div class="text-center mb-3"> <!-- Center-align the content -->
                    <h2 class="fw-bold">THGroup</h2> <!-- Apply bold font and larger size -->
                    <h3>Bảng lương tháng @Model.ViewModel.AttendentForMonthMonth.ToString("MM-yyyy")</h3> <!-- Text "Bảng lương tháng" --></div>
        <div class="table-responsive"> <!-- Add Bootstrap responsive class for small screens -->
            <table class="table table-bordered"> <!-- Use Bootstrap table classes -->
                <tbody>
                    <tr>
                        <th>@L["EmployeeName"].Value</th>
                        <td>@Model.ViewModel.EmployeeName</td>
                    </tr>
                    <tr>
                        <th>@L["DepartmentName"].Value</th>
                        <td>@Model.ViewModel.DepartmentName</td>
                    </tr>
                    <tr>
                        <th>@L["AttendentForMonthMonth"].Value</th>
                        <td>@Model.ViewModel.AttendentForMonthMonth.ToString("MM-yyyy")</td>
                    </tr>
                    <tr>
                        <th>@L["AttendentForMonthCount"].Value</th>
                        <td>@Model.ViewModel.AttendentForMonthCount</td>
                    </tr>
                    <tr>
                        <th>@L["CoefficientSalary"].Value</th>
                        <td>@Model.ViewModel.CoefficientSalary</td>
                    </tr>
                    <tr>
                        <th>@L["TotalSalary"].Value</th>
                        <td>@Model.ViewModel.TotalSalary</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </abp-modal-body>
    <abp-modal-footer buttons="@(AbpModalButtons.Close)">
            <button class="btn btn-primary" id="exportPdfButton">Export to PDF</button>
        </abp-modal-footer>
</abp-modal>
